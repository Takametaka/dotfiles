# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=16

[ddstat]
command=~/.config/i3blocks/blocks/i3dd
interval=5

[cpustat]
command=~/.config/i3blocks/blocks/i3cpu
interval=1

[memstat]
command=~/.config/i3blocks/blocks/i3mem
interval=1

[batstat]
command=~/.config/i3blocks/blocks/i3bat 
interval=5

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
